generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mongodb"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Product {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  owner       String
  name        String
  metadataUri String
  status      String   @default("draft")
  mintAddress String?
  price       Float?
  buyers      String[] @default([])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
